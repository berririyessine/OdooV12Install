<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_form_l10n_tn_payroll" model="ir.ui.view">
            <field name="name">res.company.form.l10n.tn_payroll</field>
            <field name="model">res.company</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page name="tn_payroll" string="Information TN ">
                            <group>
                                <field name="plafond_secu"/>
                                <field name="nombre_employes"/>
                                <field name="org_ss"/>
                                <field name="conv_coll"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>