<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_saleorder_document_add_timbre" inherit_id="sale.report_saleorder_document">
			<xpath expr="//tr[@class='border-black o_total']" position="before">
				<t t-if="doc.timbre">
					<tr>
						<td>Droit de timbre</td>
						<td class="text-right">
							<span t-field="doc.timbre"
								t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}' />
						</td>
					</tr>
				</t>
			</xpath>
		</template>
	</data>
</odoo>