<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_view_hr_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/div[hasclass('oe_button_box')]" position="inside">
                <button string="Repairs" name="action_view" type='object' class="oe_stat_button" icon="fa-search-plus">
                    <field name="repair_order_count"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
