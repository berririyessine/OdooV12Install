<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="repair_order_report_all">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                 <div class="page">
                 <div style="text-align: center;">
                     <span style="font-size: 25px;">Repair order by </span>
                     <span style="font-size: 25px;">
                     <span t-esc="docs.employe_id.name" /></span>
                 </div>
                 <br>
                 </br>
                 <div class="row">
                 <div class="col-4">
                     <strong>From Date:</strong>
                     <span t-esc="docs.start_date"/>
                 </div>
                 <div class="col-4">
                     <strong>To Date:</strong> 
                     <span t-esc="docs.to_date"/>
                 </div>
                 </div>
                 <br>
                 </br>
                     <table class="table table-sm o_main_table">
                     <thead>
                     <tr>
                         <th class="text-left"><strong>repair reference</strong></th>
                         <th class="text-left"><strong>Product to repair</strong></th>
                         <th class="text-left"><strong>Customer</strong></th>
                         <th class="text-left"><strong>Delivery address</strong></th>
                         <th class="text-left"><strong>warranty expiration</strong></th>
                         <th class="text-left"><strong>status</strong></th>
                     </tr>
                     </thead>
                         <tbody>
                         <t t-foreach="doc_ids" t-as="docs">
                         <tr>
                             <td class="text-left"><span t-esc="docs.name" /></td>
                             <td class="text-left"><span t-esc="docs.product_id.name" /></td>
                             <td class="text-left"><span t-esc="docs.partner_id.name" /></td>
                             <td class="text-left"><span t-esc="docs.address_id.name" /></td>
                             <td class="text-left"><span t-esc="docs.guarantee_limit" /></td>
                             <td class="text-left"><span t-esc="docs.state" /></td>
                         </tr>
                         </t>
                         </tbody>
                     </table>
                    <!--</t>-->
                  </div>
              </t>  
          </t>
    </template>
</odoo>
