<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="prospection_stage_tree" model="ir.ui.view">
        <field name="name">prospection.stage.tree</field>
        <field name="model">prospection.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="prospection_stage_form" model="ir.ui.view">
        <field name="name">prospection.stage.form</field>
        <field name="model">prospection.stage</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Stage">
                <group>
                    <group>
                        <field name="name"/>

                    </group>
                    <group>
                        <field name="on_change"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="prospection_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">prospection.stage</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to set a new stage in your opportunity pipeline.
          </p><p>
            Stages allow salespersons to easily track how a specific opportunity
            is positioned in the sales cycle.
          </p>
        </field>
    </record>


</odoo>
