<odoo>
    <data>
      <record id="purchase_payment_view_tree" model="ir.ui.view">
           <field name="name">purchase.order.payment.tree</field>
           <field name="model">purchase.order.payment</field>
           <field name="type">form</field>
           <field name="arch" type="xml">
               <tree string="Paiment">
                   <field name="purchase_order_id" readonly="1"/>
                   <field name="partner_id"/>
                   <field name="memo"/>
                   <field name="payment_date"/>
                   <field name="amount"/>
                   <field name="journal_id"/>

               </tree>
           </field>
       </record>

      <record id="purchase_payment_view" model="ir.ui.view">
           <field name="name">purchase.order.payment.form</field>
           <field name="model">purchase.order.payment</field>
           <field name="type">form</field>
           <field name="arch" type="xml">
               <form string="Paiment" create="0" save="0" edit="0">
                   <sheet >
                       <group string="Paiement">
                           <field name="purchase_order_id" readonly="1"/>
                           <field name="partner_id"/>
                           <field name="memo"/>
                           <field name="payment_date"/>
                           <field name="amount"/>
                           <field name="journal_id"/>
                       </group>
                       <group>
                          <field name="check_bool" invisible="1"/>
                          <field name="num" string="Num chÃ¨que" attrs="{'invisible': [('check_bool', '!=', True)]}"/>
                          <field name="date" string="Date du chÃ¨que" attrs="{'invisible': [('check_bool', '!=', True)]}"/>
                          <field name="banque_list" string="Banque" attrs="{'invisible': [('check_bool', '!=', True)]}"/>
                       </group>

                   </sheet>
                   <footer>
                        <button icon="fa-cogs" string="Valider" name="post_payment" type="object" class="oe_highlight"  />
                    </footer>

               </form>
           </field>
       </record>

       <record id="view_purch_order_form" model="ir.ui.view">
           <field name="name">account_payment_purchase.order.form</field>
           <field name="model">purchase.order</field>
           <field name="inherit_id" ref="purchase.purchase_order_form"/>
           <field name="arch" type="xml">
             <field name="date_order" position="after">
                 <field name="date_order_copy" string="Date de la commande"/>
             </field>
             <field name="date_order" position="attributes">
                 <attribute name="invisible">1</attribute>
             </field>
            </field>
           </record>


     </data>
     </odoo>
