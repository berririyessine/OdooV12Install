<odoo>
    <record id="dev_invoice_listing_wizard_view" model="ir.ui.view">
        <field name="name">Invoice Monthly Listing Report</field>
        <field name="model">invoice.listing.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice Monthly Listing Report">
                <group>
                    <group>
                        <field name="year"/>
                        <field name="print_previos_years"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                        <field name="filter_by"/>
                        <field name="state" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Excel" name="print_excel" type="object" class="oe_highlight"/>&#160;or<button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_listing_wizard" model="ir.actions.act_window">
        <field name="name">Invoice Monthly Listing Report</field>
        <field name="res_model">invoice.listing.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dev_invoice_listing_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Invoice Listing Report"
              id="main_menu_invoice_listing_report"
              parent="account.menu_finance"
              sequence="6"/>
    <menuitem name="Invoice Listing Report"
              id="menu_invoice_listing_report"
              parent="main_menu_invoice_listing_report"
              sequence="1"
              action="action_invoice_listing_wizard"/>
</odoo>
